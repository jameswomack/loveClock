inlineThis()
  display inline-block
  width 25%

defaultBorder()
  border 2px solid #000


body
  font-family 'Avenir Next', Avenir, Futura, 'Century Gothic', Verdana, Helvetica, Arial, sans-serif;
  text-align center
  margin 0
  padding 0

.timeZoneTitle
  inlineThis()

.timeZoneHours
  defaultBorder()
  box-sizing border-box
  padding 0px
  inlineThis()
  &:nth-child(even)
    border-right 0px
  &:nth-child(odd)
    border-left 0px
  li
    list-style none
    padding 12px 0
    defaultBorder()
    &:nth-child(even)
      background-color #ccc
    &.currentTime
      background #1f1

